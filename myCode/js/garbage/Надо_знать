```js
    function globalEval(code) { // объединим два способа в одну функцию
      window.execScript ? execScript(code) : window.eval(code);
    }

    var a = 1;

    (function() {

      var a = 2;

      globalEval(' alert(a) '); // 1, во всех браузерах

    })();
```

